{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "CodelabNestUseCase",
  "title": "Create Use Case Files for Domain Module for Codelab",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "description": "E.g. \"modules-app\", this is the name of the module, is prepended by \"modules-\"",
      "x-prompt": "What library is this for?"
    },
    "useCaseName": {
      "description": "E.g. \"createApp\", use lower camel case",
      "x-prompt": "What name would you like to use for the use case?"
    },
    "moduleName": {
      "type": "string",
      "description": "E.g. \"app\", use lower case",
      "x-prompt": "What module is this for?"
    },
    "resolverType": {
      "type": "string",
      "description": "E.g. \"query\" or \"mutation\"",
      "x-prompt": {
        "message": "Query or Mutation for this Use Case",
        "type": "list",
        "items": [
          {
            "value": "Query",
            "label": "Query"
          },
          {
            "value": "Mutation",
            "label": "Mutation"
          }
        ]
      }
    }
  },
  "required": ["useCaseName", "moduleName", "resolverType"]
}
