{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "types": ["node", "@xstate/react"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["libs/ddd/**/*.ts", "libs/ddd/**/*.tsx"],
  "exclude": [
    "**/deprecated",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.data.ts",
    "**/*.data.tsx"
  ]
}
