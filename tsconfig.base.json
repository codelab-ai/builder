{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "types": ["@rjsf/antd", "node", "jest"],
    "typeRoots": ["node_modules/@types", "types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@codelab/generated": ["libs/generated/src/index.ts"],
      "@codelab/hasura": ["libs/hasura/src/index.ts"],
      "@codelab/tools-eslint-config-codelab": [
        "libs/tools/eslint-config-codelab/src/index.ts"
      ],
      "@codelab/backend": ["libs/backend/src/index"],
      "@codelab/modules/app": ["libs/modules/app/src/index.ts"],
      "@codelab/modules/category": ["libs/modules/category/src/index.ts"],
      "@codelab/modules/component": ["libs/modules/component/src/index.ts"],
      "@codelab/modules/lambda": ["libs/modules/lambda/src/index.ts"],
      "@codelab/modules/library": ["libs/modules/library/src/index.ts"],
      "@codelab/modules/page": ["libs/modules/page/src/index.ts"],
      "@codelab/modules/prop": ["libs/modules/prop/src/index.ts"],
      "@codelab/modules/style": ["libs/modules/style/src/index.ts"],
      "@codelab/modules/user": ["libs/modules/user/src/index.ts"],
      "@codelab/frontend/shared": ["libs/frontend/shared/src/index.ts"],
      "@codelab/frontend/layout": ["libs/frontend/layout/src/index.ts"],
      "@codelab/frontend/builder": ["libs/frontend/builder/src/index.ts"],
      "@codelab/frontend/style": ["libs/frontend/style/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
