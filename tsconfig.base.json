{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "types": ["@rjsf/antd", "node", "jest"],
    "typeRoots": ["node_modules/@types", "types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@codelab/generated": ["libs/generated/src/index.ts"],
      "@codelab/tools-eslint-config-codelab": [
        "libs/tools/eslint-config-codelab/src/index.ts"
      ],
      "@codelab/backend": ["libs/backend/src/index.ts"],
      "@codelab/frontend": ["libs/frontend/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
