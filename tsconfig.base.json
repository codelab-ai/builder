      "@codelab/state/modal": ["libs/state/modal/src/index.ts"],
      "@codelab/ui/antd": ["libs/ui/antd/src/index.ts"],
      "@codelab/ui/d3": ["libs/ui/d3/src/index.ts"],
      "@codelab/ui/component": ["libs/ui/component/src/index.ts"],
      "@codelab/ui/hoc": ["libs/ui/hoc/src/index.ts"]
